<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp">
                <shape>
                    <solid android:color="#FF156081" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <item android:left="15dp" android:top="15dp" android:right="15dp" android:bottom="15dp">
                <shape>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>


    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp">
                <shape>
                    <solid android:color="#000000" /> <!-- Negro para el estado normal -->
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <item android:left="15dp" android:top="15dp" android:right="15dp" android:bottom="15dp">
                <shape>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
